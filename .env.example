# HydroNet 配置文件示例
# 复制此文件为 .env 并填写实际的配置值

# Flask配置
SECRET_KEY=your-secret-key-change-this-in-production
HOST=0.0.0.0
PORT=5000
DEBUG=True

# 微信公众号配置
# 在微信公众平台获取：https://mp.weixin.qq.com
WECHAT_TOKEN=your-wechat-token
WECHAT_APP_ID=your-app-id
WECHAT_APP_SECRET=your-app-secret

# 腾讯云API配置
# 在腾讯云控制台获取：https://console.cloud.tencent.com/cam/capi
TENCENT_SECRET_ID=your-secret-id
TENCENT_SECRET_KEY=your-secret-key
TENCENT_REGION=ap-guangzhou

# 腾讯元宝大模型配置
# 模型选项: hunyuan-lite, hunyuan-standard, hunyuan-pro
HUNYUAN_MODEL=hunyuan-lite
HUNYUAN_TEMPERATURE=0.7
HUNYUAN_MAX_TOKENS=2000

# MCP服务配置
MCP_SERVICES_DIR=./mcp_services
MCP_TIMEOUT=30

# 数据库配置（可选）
DATABASE_URL=sqlite:///hydronet.db

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=hydronet.log

# 系统配置
MAX_CONVERSATION_HISTORY=10
SESSION_TIMEOUT=3600
